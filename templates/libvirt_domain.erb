<domain type='kvm'>
  <name><%= name %></name>
  <% if uuid %>
  <uuid><%= uuid %></uuid>
  <% end %>
  <memory unit='<%= memory_unit %>'><%= memory_size %></memory>
  <currentMemory unit='<%= memory_unit %>'><%= memory_size %></currentMemory>
  <vcpu placement='static'><%= cpus %></vcpu>
  <% if cpu_type %>
  <cpu match='exact'>
    <model fallback='allow'><%= cpu_type %></model>
  </cpu>
  <% end %>
  <os>
    <type arch='<%= arch %>' machine='<%= machine_type %>'>hvm</type>
    <boot dev='hd'/>
    <% if kernel %>
    <kernel><%= kernel %></kernel>
    <% end %>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator><%= qemu_bin %></emulator>
    <disk type='file' device='disk'>
      <driver name='qemu' type='<%= image_type %>' <% if volume_cache %>cache='<%= volume_cache %>'<% end %>/>
      <source file='<%= disk %>'/>
      <target dev='vda' bus='<%= disk_bus %>'/>
  <% if disk_bus == 'virtio' %>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x06' function='0x0'/>
  <% else %>
      <address type='drive' controller='0' bus='0' target='0' unit='0'/>
  <% end %>
    </disk>

  <% if machine_type =~ /q35/ %>
    <controller type='pci' index='0' model='pcie-root'/>
    <controller type='pci' index='1' model='dmi-to-pci-bridge'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x0e' function='0x0'/>
    </controller>
    <controller type='pci' index='2' model='pci-bridge'>
      <address type='pci' domain='0x0000' bus='0x01' slot='0x01' function='0x0'/>
    </controller>
    <controller type='sata' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x1f' function='0x2'/>
    </controller>
    <controller type='usb' index='0' model='ich9-ehci1'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x7'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci1'>
      <master startport='0'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0' multifunction='on'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci2'>
      <master startport='2'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x1'/>
    </controller>
    <controller type='usb' index='0' model='ich9-uhci3'>
      <master startport='4'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x2'/>
    </controller>
    <input type='tablet' bus='usb'/>
    <input type='mouse' bus='usb'/>
    <input type='keyboard' bus='usb'/>
  <% else %>
    <controller type='ide' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x1'/>
    </controller>
    <controller type='usb' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x01' function='0x2'/>
    </controller>
    <controller type='sata' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x08' function='0x0'/>
    </controller>
    <controller type='scsi' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x09' function='0x0'/>
    </controller>
    <controller type='virtio-serial' index='0'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x05' function='0x0'/>
    </controller>
    <input type='mouse' bus='ps2'/>
    <input type='tablet' bus='usb'/>
   <% end %>
    <interface type='network'>
      <mac address='<%= mac %>'/>
      <source network='vmstack_net'/>
      <% unless network_model == :default %>
      <model type='<%= network_model %>'/>
      <% end %>
    </interface>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>
    <sound model='ich6'>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x04' function='0x0'/>
    </sound>
    <% if gui %>
    <graphics type='vnc' port='<%= vnc_port || -1 %>' autoport='<%= vnc_autoport %>' listen='0.0.0.0' passwd='<%= vnc_password %>'>
      <listen type='address' address='0.0.0.0'/>
    </graphics>
    <% end %>
    <video>
      <model type='<%= video_model %>' vram='9216' heads='1'/>
      <address type='pci' domain='0x0000' bus='0x00' slot='0x02' function='0x0'/>
    </video>
  </devices>
</domain>
